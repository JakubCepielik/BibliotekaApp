@using Biblioteka.Data;
@using Biblioteka.Data.Enums;

@model Biblioteka.Models.Ksiazki

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Ksiazki</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nazwa" class="control-label"></label>
                <input asp-for="Nazwa" class="form-control" />
                <span asp-validation-for="Nazwa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Opis" class="control-label"></label>
                <input asp-for="Opis" class="form-control" />
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Autor" class="control-label"></label>
                <select asp-for="AutorId" class="form-control" asp-items="@ViewBag.Autorzy">
                </select>
                <span asp-validation-for="AutorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Wydawnictwo" class="control-label"></label>
                <select asp-for="WydawnictwoId" class="form-control" asp-items="@ViewBag.Wydawnictwa">
                </select>
                <span asp-validation-for="WydawnictwoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kategoria" class="control-label"></label>
                <select asp-for="Kategoria" class="form-control" asp-items="Html.GetEnumSelectList<KsiazkaKategoria>()">
                </select>
                <span asp-validation-for="Kategoria" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top:10px; margin-bottom:10px">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" style="text-decoration: none">Powrót do listy</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
